<!-- ======== @Region: #content ======== -->
    <div id="content">
        <div class="row">
            <div class="col-sm-10 col-md-10 col-md-offset-1 col-sm-offset-1">
                <h2>My Shopping Cart</h2>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-10 col-md-10 col-md-offset-1 col-sm-offset-1">
                {{# if products }}
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>ITEMS</th>
                      <th>TITLE</th>
                      <th>PRICE</th>
                      <th>QUANTITY</th>                     
                      <th>DELETE</th>
                    </tr>
                  </thead>
                  <tbody>
                           
                        {{# each products }}
                            <tr>
                              <td class="shopping-cart"><img src="{{ this.item.imagePath }}" alt="Product item"></td>
                              <td><strong>{{ this.item.title }}</strong></td>
                              <td><span class="label label-success">${{ this.price }}</span></td>
                              <td>
                                <a href="/reduce/{{this.item._id}}"><span class="fa fa-minus-square"></span></a>
                                <span class="badge">{{ this.qty }}</span>
                                <a href="/increase-cart/{{this.item._id}}"><span class="fa fa-plus-square"></span></a>
                              </td>
                              <td><a href="/remove/{{this.item._id}}" class="fa fa-trash-o"></a></td>
                            </tr>
                        {{/each}}

                    
                  </tbody>
                </table>
            </div>
        </div>

      
        <div class="row">
            <div class="col-sm-10 col-md-10 col-md-offset-1 col-sm-offset-1">
                <strong class="pull-right">Total: ${{ totalPrice }}</strong>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-sm-10 col-md-10 col-md-offset-1 col-sm-offset-1">
                <a href="/checkout" type="button" class="btn btn-success pull-right">Checkout</a>
            </div>
        </div>
        {{ else }}
            <div class="row">
                <div class="col-sm-10 col-md-10 col-md-offset-1 col-sm-offset-1">
                    <h2>No Items in Cart</h2>
                </div>
            </div>
        {{/if}}
          <!-- /row -->
    </div>