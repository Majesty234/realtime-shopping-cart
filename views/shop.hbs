
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
                {{ successMsg }}
            </div>
        </div>
    </div>

    {{# each products }}
        <div class="row">
            {{# each this }}
                <div class="col-sm-6 col-md-3">
                    <div class="thumbnail">               
                        <a href="/add-to-cart/{{ this._id}}" class="overlay-wrapper">
                            <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                            <span class="overlay">
                              <span class="overlay-content"> <span class="h4">Add to Cart</span> </span>
                            </span>
                        </a>
                        <div class="caption">
                            <h3>{{ this.title }}</h3>
                            <p class="description">{{ this.description }}</p>
                            <div class="clearfix">
                                <div class="price pull-left">${{ this.price }}</div>
                                <a href="#" class="btn btn-success pull-right" role="button">Buy</a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/each}}

    