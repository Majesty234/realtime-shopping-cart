
<!-- ======== @Region: #content ======== -->
    <div id="content">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
        	<h1>Checkout</h1>
	        <h4>Your Total: ${{total}}</h4>
		    <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
		        {{errMsg}}
		    </div>
          
            <div class="panel-body">
              
              <form action="/checkout" method="post" id="checkout-form">
                <fieldset>
                  <div class="form-group">
                    <div class="input-group input-group-lg" for="name">
                      <span class="input-group-addon"><i class="fa fa-fw fa-user"></i></span>
                      <input type="text" class="form-control" id="name" placeholder="Enter Your Name" required>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-lg" for="Address">
                      <span class="input-group-addon"><i class="fa fa-fw fa-map"></i></span>
                      <input type="text" class="form-control" id="address" placeholder="Enter Your Address" required>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-lg" for="card-name">
                      <span class="input-group-addon"><i class="fa fa-fw fa-user"></i></span>
                      <input type="text" class="form-control" id="card-name" placeholder="Card Holder Names" required>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-lg" for="credit-number">
                      <span class="input-group-addon"><i class="fa fa-fw fa-credit-card"></i></span>
                      <input type="text" class="form-control" id="card-number" placeholder="Credit Card Number" required>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-lg" for="expire-month">
                      <span class="input-group-addon"><i class="fa fa-fw fa-calendar"></i></span>
                      <input type="text" class="form-control" id="card-expiry-month" placeholder="Expiration Month" required>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-lg" for="expire-year">
                      <span class="input-group-addon"><i class="fa fa-fw fa-calendar"></i></span>
                      <input type="text" class="form-control" id="card-expiry-year" placeholder="Expiration year" required>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-lg" for="card-cvc">
                      <span class="input-group-addon"><i class="fa fa-fw fa-credit-card"></i></span>
                      <input type="text" class="form-control" id="card-cvc" placeholder="Card CVC" required>
                    </div>
                  </div>
                  
                  <input class="btn btn-lg btn-primary btn-block" type="submit" value="Place Order">
                </fieldset>
              </form>
              
          </div>
            </div>

          </div>
        </div>
      </div>
      <!-- /row -->
    </div>
    <script type="text/javascript" src="https://js.stripe.com/v3/"></script>
	<script type="text/javascript" src="javascripts/checkout.js"></script>